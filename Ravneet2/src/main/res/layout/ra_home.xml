<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context="ravneet.singh2.fragment.RaHome">

    <TextView
        android:id="@+id/tvRavneet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ravneet Singh"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tvN01148757"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N01148757"
        android:layout_below="@+id/tvRavneet"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/tvN01148757"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/date_time"
        android:layout_marginTop="92dp" />

</RelativeLayout>
